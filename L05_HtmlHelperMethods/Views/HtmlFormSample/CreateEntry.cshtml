
@{
    ViewBag.Title = "Додати запис";
}

<h2>Додати запис</h2>

@using (Html.BeginForm())
{
<fieldset>
    <legend>Створити новий запис</legend>

    <table>
        <tr>
            <th><label>Дата і час</label></th>
            <th><label>Клієнт</label></th>
            <th><label>К-сть</label></th>
            <th><label>Віддав</label></th>
            <th><label>Прийняв</label></th>
            <th><label>Створене</label></th>
        </tr>
        <tr>
            <td>@Html.TextBox("CreatedTime")</td>
            <td>@Html.TextBox("Customer")</td>
            <td>@Html.TextBox("Quantity")</td>
            <td>@Html.TextBox("DeliveredBy")</td>
            <td>@Html.TextBox("ReceivedBy")</td>
            <td>@Html.CheckBox("IsCreated")</td>
            <td><input type="submit" name="CreateEntry" value="Створити запис" /></td>
        </tr>
    </table>
</fieldset>
}