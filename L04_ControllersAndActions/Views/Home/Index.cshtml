
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Home"))
{
    <table>
        <tr>
            <th><label>Клієнт</label></th>
            <th><label>К-сть місць</label></th>
            <th><label>Здав</label></th>
            <th><label>Прийняв</label></th>
        </tr>
        <tr>
            <td>@Html.TextBox("customer")</td>
            <td>@Html.TextBox("quantity")</td>
            <td>@Html.TextBox("deliveredBy")</td>
            <td>@Html.TextBox("receivedBy")</td>
            <td><input type="submit" name="entry" value="Create"></td>
        </tr>
        <tr>
            <td>@ViewBag.Customer</td>
            <td>@ViewBag.Quantity</td>
            <td>@ViewBag.DeliveredBy</td>
            <td>@ViewBag.ReceivedBy</td>
        </tr>
    </table>  
}

