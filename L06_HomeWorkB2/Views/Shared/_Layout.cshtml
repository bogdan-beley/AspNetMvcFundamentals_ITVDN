<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Shop</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
</head>
<body>
    <div>
        <ul>
            <li>@Html.ActionLink("Домашня", "Index", "Home")</li>
        </ul>
        <hr />
        <ul>
            <li>@Html.ActionLink("Продукти", "Index", "Products")</li>
            <li>@Html.ActionLink("Користувачі", "Index", "Users")</li>
            <li>@Html.ActionLink("Замовлення", "Index", "Orders")</li>
        </ul>
        <hr />
        <ul>
            <li>@Html.ActionLink("Звіти", "Index", "Reports")</li>
        </ul>
    </div>

    @RenderBody()

    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - My Shop</p>
    </footer>
</body>
</html>
